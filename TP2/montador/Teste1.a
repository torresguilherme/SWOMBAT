.extern _max
.extern _min
.extern _sum
.extern _prod
.extern _med
         loadc R0 0       ; inicializacao dos registradores com zero
         loadc R1 0
         loadc R2 0 
         loadc R3 0 
         loadc R4 0
         loadc R5 0
         loadc R6 0
_inicio  loadc R7 0       ; inicio do programa
         loadi R0 IO      ; le A
         loadi R1 IO      ; le B
         loadi R2 IO      ; le C
         loadi R3 IO      ; le OP
         move R4 R3
         addi R4 -1
         jumpz _maxint
         move R4 R3
         addi R4 -2
         jumpz _minint
         move R4 R3
         addi R4 -3
         jumpz _sumint
         move R4 R3
         addi R4 -4
         jumpz _prodint
         move R4 R3
         addi R4 -5
         jumpz _medint
         move R4 R3
         addi R4 -100     ; se digitar OP=100, encerra o programa
         jumpz _fim
_mostra  storei R7 IO
         jump _inicio     ; volta o loop
_fim     return           ; encerra o programa   
_maxint  call _max
         jump _mostra
_minint  call _min
         jump _mostra
_sumint  call _sum
         jump _mostra
_prodint call _prod
         jump _mostra
_medint  call _med
         jump _mostra

